<% layout("/layouts/boilerplate") -%>
    <title>WanderLust</title>
    <style>
        form {
          max-width: 600px;
          margin: 30px auto;
          padding: 20px;
          border: 1px solid #ccc;
          border-radius: 10px;
          font-family: Arial, sans-serif;
        }
    
        input, textarea, select {
          width: 100%;
          margin-top: 10px;
          padding: 8px;
          border-radius: 5px;
          border: 1px solid #ddd;
        }
    
        label {
          margin-top: 15px;
          display: block;
          font-weight: bold;
        }
    
        button {
          margin-top: 20px;
          padding: 10px 15px;
          border: none;
          background-color: #007bff;
          color: white;
          font-size: 16px;
          border-radius: 5px;
          cursor: pointer;
        }
    
        button:hover {
          background-color: #0056b3;
        }
        h3{
          text-align: center;
        }
      </style>
  </head>
  <body>
    <h3>Add New Listing</h3>
    <form method="POST" action="/listings">
        <label>Job ID</label>
        <input name="listing[jobId]" type="number" required />
    
        <label>Title</label>
        <input name="listing[title]" type="text" required />
    
        <label>Company</label>
        <input name="listing[company]" type="text" required />
    
        <label>Location</label>
        <input name="listing[location]" type="text" required />
    
        <label>Country</label>
        <input name="listing[country]" type="text" required />
    
        <label>Job Link</label>
        <input name="listing[jobLink]" type="url" required />
    
        <label>Employment Type</label>
        <input name="listing[employmentType]" type="text" required />
    
        <label>Experience Description</label>
        <input name="listing[experience]" type="text" required />
    
        <label>Minimum Experience (Years)</label>
        <input name="listing[minExp]" type="number" required />
    
        <label>Maximum Experience (Years)</label>
        <input name="listing[maxExp]" type="number" required />
    
        <label>Seniority Level</label>
        <input name="listing[seniorityLevel]" type="text" />
    
        <label>Company Type</label>
        <input name="listing[companyType]" type="text" />
    
        <label>Source</label>
        <input name="listing[source]" type="text" required />
    
        <label>Company URL</label>
        <input name="listing[companyUrl]" type="url" />
    
        <label>Company Image URL</label>
        <input name="listing[companyImageUrl]" type="url" />
    
        <label>Posted Date</label>
        <input name="listing[postedDateTime]" type="date" required />
    
        <button type="submit">Create Listing</button>
      </form>
  </body>
</html>