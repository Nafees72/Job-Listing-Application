      gap: 1.5rem;
      margin-top: 2rem;
      flex-wrap: wrap;
    }

    .btn {
      padding: 0.6rem 1.4rem;
      font-size: 1rem;
      border-radius: 5px;
      font-weight: 600;
      text-decoration: none;
      cursor: pointer;
    }

    .btn-dark {
      background-color: #343a40;
      color: white;
      border: none;
    }

    .btn-dark:hover {
      background-color: #23272b;
    }

    .edit-btn {
      text-align: center;
    }

    form {
      display: inline;
    }
  </style>
