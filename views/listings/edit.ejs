<% layout("/layouts/boilerplate") -%>
  <body>
    <h3>Edit your Listing</h3>
<form method="POST" action="/listings/<%= listing._id %>?_method=PUT" class="edit-form">
  <label for="jobId">Job ID</label>
  <input name="listing[jobId]" value="<%= listing.jobId %>" type="number" required />

  <label for="title">Job Title</label>
  <input name="listing[title]" value="<%= listing.title %>" type="text" required />

  <label for="company">Company</label>
  <input name="listing[company]" value="<%= listing.company %>" type="text" required />

  <label for="location">Location</label>
  <input name="listing[location]" value="<%= listing.location %>" type="text" required />

  <label for="jobLink">Job Link</label>
  <input name="listing[jobLink]" value="<%= listing.jobLink %>" type="url" required />

  <label for="employmentType">Employment Type</label>
  <input name="listing[employmentType]" value="<%= listing.employmentType %>" type="text" required />

  <label for="experience">Experience</label>
  <input name="listing[experience]" value="<%= listing.experience %>" type="text" required />

  <label for="minExp">Minimum Experience</label>
  <input name="listing[minExp]" value="<%= listing.minExp %>" type="number" required />

  <label for="maxExp">Maximum Experience</label>
  <input name="listing[maxExp]" value="<%= listing.maxExp %>" type="number" required />

  <label for="seniorityLevel">Seniority Level</label>
  <input name="listing[seniorityLevel]" value="<%= listing.seniorityLevel %>" type="text" />

  <label for="companyType">Company Type</label>
  <input name="listing[companyType]" value="<%= listing.companyType %>" type="text" />

  <label for="source">Source</label>
  <input name="listing[source]" value="<%= listing.source %>" type="text" required />

  <label for="companyUrl">Company URL</label>
  <input name="listing[companyUrl]" value="<%= listing.companyUrl %>" type="url" />

  <label for="companyImageUrl">Company Image URL</label>
  <input name="listing[companyImageUrl]" value="<%= listing.companyImageUrl %>" type="url" />

  <label for="postedDateTime">Posted Date</label>
  <input name="listing[postedDateTime]" value="<%= listing.postedDateTime.toISOString().slice(0, 16) %>" type="datetime-local" required />

  <label for="country">Country</label>
  <input name="listing[country]" value="<%= listing.country %>" type="text" required />

  <button type="submit">Update Listing</button>
</form>
<style>
  h3{
    text-align: center;
  }
  form {
          max-width: 600px;
          margin: 30px auto;
          padding: 20px;
          border: 1px solid #ccc;
          border-radius: 10px;
          font-family: Arial, sans-serif;
        }
    
        input, textarea, select {
          width: 100%;
          margin-top: 10px;
          padding: 8px;
          border-radius: 5px;
          border: 1px solid #ddd;
        }
    
        label {
          margin-top: 15px;
          display: block;
          font-weight: bold;
        }
    
        button {
          margin-top: 20px;
          padding: 10px 15px;
          border: none;
          background-color: #007bff;
          color: white;
          font-size: 16px;
          border-radius: 5px;
          cursor: pointer;
        }
    
        button:hover {
          background-color: #0056b3;
        }
</style>
  </body>
</html>